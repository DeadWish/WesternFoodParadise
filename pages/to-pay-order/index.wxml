<import src="/template/login/index.wxml" />
<view class="container">
  <view class="goods-list">
    <view class="list-title">
    {{_t['商品列表'] || '商品列表'}}

    </view>
    <view class="a-goods" wx:for-items="{{goodsList}}" wx:key="{{index}}">
      <view class="img-box">
        <image src="{{item.pic}}" class="img" />
      </view>
      <view class="text-box">
        <view class="arow arow01">
          <view class="goods-name">{{item.name}}</view>
          <view class="goods-price">¥ {{item.price}}</view>
        </view>
        <view class="arow">
          <view class="goods-label">{{item.label}}</view>
          <view class="goods-num">x {{item.number}}</view>
        </view>
      </view>
    </view>
  </view>
  <view class="peisong-way">
    <view class="row-box" wx:if="{{isNeedLogistics > 0}}">
      <view class="row-label">
      {{_t['配送方式'] || '配送方式'}}
      </view>
      <radio-group bindchange="radioChange">
        <label class="radio">
          <radio value="kd" checked="{{peisongType == 'kd'}}" />
          {{_t['快递'] || '快递'}}
        </label>
        <!-- <label class="radio" wx:if='{{allowSelfCollection == "1"}}'>
          <radio value="zq" checked="{{peisongType == 'zq'}}" /> 到店自取
        </label> -->
      </radio-group>
    </view>
    <view class="address-box" wx:if="{{peisongType == 'kd' && isNeedLogistics > 0}}">
      <view class="add-address" hidden="{{curAddressData}}">
        <view class="title" bindtap="addAddress">
        {{_t['新增收货地址'] || '新增收货地址'}}
        </view>
      </view>
      <view class="show-address" hidden="{{!curAddressData}}" bindtap="selectAddress">
        <view class="name-tel">{{curAddressData.linkMan}} {{curAddressData.mobile}}</view>
        <view class="addr-text">{{curAddressData.address}}</view>
      </view>
    </view>
    <view class="row-box">
      <view class="row-label">
       {{_t['备注'] || '备注'}}
      </view>
      <view class="right-text">
        <input bindinput="remarkChange" type="text" class="liuyan" placeholder="" />
      </view>
    </view>
  </view>
  <view wx:if="{{!hasNoCoupons}}" class="peisong-way">
    <view class="row-box" style="border-bottom:none;">
      <view class="row-label">
      {{_t['选择使用优惠券'] || '选择使用优惠券'}}
      </view>
    </view>
    <view class="row-box" style="border-bottom:none;padding-top:0">
      <picker-view class="picker-view-coupons" indicator-class="picker-box" value="0" bindchange="bindChangeCoupon">
        <picker-view-column>
          <view class="picker-line">
          {{_t['不使用优惠券'] || '不使用优惠券'}}
          </view>
          <view class="picker-line" wx:for="{{coupons}}" wx:key="id">{{item.money}}元 {{item.name}}</view>
        </picker-view-column>
      </picker-view>
    </view>
  </view>

  <view class="goods-info" wx:if="{{(isNeedLogistics > 0 && yunPrice > 0) || (!hasNoCoupons)}}">
    <view class="row-box" wx:if="{{isNeedLogistics > 0 && yunPrice > 0}}">
      <view class="row-label">
      {{_t['商品金额'] || '商品金额'}}
      </view>
      <view class="right-text">¥ {{allGoodsPrice}}</view>
    </view>
    <view class="row-box" wx:if="{{isNeedLogistics > 0 && yunPrice > 0}}">
      <view class="row-label">
            {{_t['运费'] || '运费'}}

      </view>
      <view class="right-text">+ ¥ {{yunPrice}}</view>
    </view>
    <view class="row-box" wx:if="{{!hasNoCoupons}}">
      <view class="row-label">
      {{_t['优惠券'] || '优惠券'}}
      </view>
      <view class="right-text">- ¥ {{youhuijine}}</view>
    </view>
  </view>

  <view class="jiesuan-box safeAreaOldPaddingBttom safeAreaNewPaddingBttom">
    <view class="left-price">
      <view class="total">{{_t['合计'] || '合计'}}：¥ {{allGoodsAndYunPrice - youhuijine}} + {{totalScoreToPay}} {{_t['积分'] || '积分'}}</view>
    </view>
    <button class="to-pay-btn" bindtap="goCreateOrder">{{_t['提交订单'] || '提交订单'}}</button>
  </view>
</view>

<template is="apifmLogin" data="{{wxlogin: wxlogin}}" />