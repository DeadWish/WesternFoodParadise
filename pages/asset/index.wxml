<import src="/template/login/index.wxml" />

<view wx:if="{{ isSeller }}" class="asset">
  <view class='item'>
    <view>{{_t['可用余额'] || '可用余额'}}(￥)</view>
    <view>{{balance}}</view>
  </view>
  <view class='item'>
    <view>{{_t['冻结金额'] || '冻结金额'}}(￥)</view>
    <view>{{freeze}}</view>
  </view>
  <view class='item right'>
    <view>{{_t['累计消费'] || '累计消费'}}(￥)</view>
    <view>{{totleConsumed}}</view>
  </view>
</view>
<view wx:if="{{ isSeller }}" class='btn-view'>
  <form bindsubmit="withdraw" report-submit="true">
    <button class='btn bth-right' type="default" size="mini" form-type="submit" hover-class="btn-hover" plain="true">
      {{_t['提现'] || '提现'}}
    </button>
  </form>
</view>
<view class="page">
  <view class="page__bd">
    <view class="weui-tab">
      <view class="weui-navbar">
        <block wx:for="{{tabs}}" wx:key="*this">
          <view id="{{index}}" class="weui-navbar__item {{activeIndex == index ? 'weui-bar__item_on' : ''}}" bindtap="tabClick">
            <view class="weui-navbar__title">{{item}}</view>
          </view>
        </block>
        <view class="weui-navbar__slider" style="left: {{sliderLeft}}px; transform: translateX({{sliderOffset}}px); -webkit-transform: translateX({{sliderOffset}}px);"></view>
      </view>
      <view class="weui-tab__panel">
        <view class="weui-tab__content" hidden="{{activeIndex != 0}}">
          <view class='no-data' wx:if="{{!cashlogs}}"> {{_t['无记录'] || '无记录'}}</view>
          <view class='cashlogs' wx:if="{{cashlogs}}" wx:for-items="{{cashlogs}}" wx:key="{{index}}">
            <view class='profile'>
              <view class='typeStr'>{{ _t[item.typeStr] || item.typeStr}}</view>
              <view class='dateAdd'>{{ item.dateAdd }}</view>
            </view>
            <view class='amount' style="color: {{ (item.behavior ==0 ) ? 'red' : 'green' }}"> {{ (item.behavior ==0 ) ? '+' : '-' }} {{ item.amount }} </view>
          </view>
        </view>
        <view class="weui-tab__content" hidden="{{activeIndex != 1}}">
          <view class='no-data' wx:if="{{!withDrawlogs}}"> {{_t['无记录'] || '无记录'}}</view>
          <view class='cashlogs' wx:if="{{withDrawlogs}}" wx:for-items="{{withDrawlogs}}" wx:key="{{index}}">
            <view class='profile'>
              <view class='typeStr'>{{ item.statusStr }}</view>
              <view class='dateAdd'>{{ item.dateAdd }}</view>
            </view>
            <view class='amount' style="color: red"> {{ item.money }} </view>
          </view>
        </view>
        <view class="weui-tab__content" hidden="{{activeIndex != 2}}">
          <view class='no-data' wx:if="{{!depositlogs}}">
          {{_t['无记录'] || '无记录'}}
          </view>
          <view class='cashlogs' wx:if="{{depositlogs}}" wx:for-items="{{depositlogs}}" wx:key="{{index}}">
            <view class='profile'>
              <view class='typeStr'>{{ item.statusStr }}</view>
              <view class='dateAdd'>{{ item.dateAdd }}</view>
            </view>
            <view class='amount' style="color: red"> {{ item.amount }} </view>
          </view>
        </view>
      </view>
    </view>
  </view>
</view>

<template is="apifmLogin" data="{{wxlogin: wxlogin}}" />